<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutDev">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgbricks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:id="@+id/AbtRel">

        <include
            android:id="@+id/AbtDevToolbar"
            layout="@layout/toolbar" />
        <RelativeLayout
            android:id="@+id/RelativeAbtDev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@id/AbtDevToolbar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THE DEVELOPERS"
                android:textSize="35sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:id="@+id/headingDev"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/RelativeAbtDevImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="125sp"
                    android:background="#FFFFFF"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dev_mihir"
                    android:layout_marginTop="30sp"
                    android:layout_width="175sp"
                    android:layout_height="175sp"
                    android:src="@drawable/mihir"
                    />
                    <TextView
                        android:id="@+id/dev_name_mihir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mihir Mehta"
                        android:textSize="32sp"
                        android:textColor="#FF000000"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="50sp"
                        android:layout_toRightOf="@+id/dev_mihir"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Major-Developer"
                        android:textSize="20sp"
                        android:layout_below="@+id/dev_name_mihir"
                        android:layout_toRightOf="@+id/dev_mihir"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="12sp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dev_hrutvik"
                    android:layout_marginTop="30sp"
                    android:layout_below="@+id/dev_mihir"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/hrutvik"

                    android:layout_width="175sp"
                    android:layout_height="175sp"/>
                    <TextView
                        android:id="@+id/dev_name_hrutvik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dev_mihir"
                        android:text="Hrutvik Suthar"
                        android:textSize="32sp"
                        android:textColor="#FF000000"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="50sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Co-Developer"
                        android:textSize="20sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="12sp"
                        android:layout_below="@+id/dev_name_hrutvik"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dev_harsh"
                    android:layout_marginTop="30sp"
                    android:layout_below="@+id/dev_hrutvik"
                    android:src="@drawable/harsh"

                    android:layout_width="175sp"
                    android:layout_height="175sp"/>
                    <TextView
                        android:id="@+id/dev_name_harsh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harsh Patel"
                        android:layout_below="@+id/dev_hrutvik"
                        android:textSize="32sp"
                        android:textColor="#FF000000"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="50sp"
                        android:layout_toRightOf="@+id/dev_harsh"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Co-Developer"
                        android:textSize="20sp"
                        android:layout_below="@+id/dev_name_harsh"
                        android:layout_toRightOf="@+id/dev_harsh"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="12sp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dev_jigar"
                    android:layout_marginTop="30sp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/dev_harsh"
                    android:src="@drawable/jigar"

                    android:layout_width="175sp"
                    android:layout_height="175sp"/>
                    <TextView
                        android:id="@+id/dev_name_jigar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dev_harsh"
                        android:text="Jigar Desai"
                        android:textSize="32sp"
                        android:textColor="#FF000000"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="50sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intern-Developer"
                        android:textSize="20sp"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="12sp"
                        android:layout_below="@+id/dev_name_jigar"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dev_chirag"
                    android:layout_marginTop="30sp"
                    android:layout_below="@+id/dev_jigar"
                    android:src="@drawable/background_splash"
                    android:layout_marginBottom="20sp"
                    android:layout_width="175sp"
                    android:layout_height="175sp"/>
                    <TextView
                        android:id="@+id/dev_name_chirag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chirag Tandel"
                        android:layout_below="@+id/dev_jigar"
                        android:textSize="32sp"
                        android:textColor="#FF000000"
                        android:layout_marginStart="12sp"
                        android:layout_marginTop="50sp"
                        android:layout_toRightOf="@+id/dev_chirag"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intern-Developer"
                        android:textSize="20sp"
                        android:layout_below="@+id/dev_name_chirag"
                        android:layout_toRightOf="@+id/dev_chirag"
                        android:layout_marginStart="15sp"
                        android:layout_marginTop="12sp"/>

                </RelativeLayout>
            </ScrollView>

            <!--            <ListView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@id/headingDev"-->
<!--                android:layout_centerHorizontal="true"/>-->
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>