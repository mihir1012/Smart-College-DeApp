<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacultyInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgbricks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <include
            android:id="@+id/FacultyToolbar"
            layout="@layout/toolbar" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40sp"
            android:layout_marginTop="0sp"
            android:layout_marginEnd="40sp"
            android:layout_marginBottom="0dp"
            android:background="#FFFFFF"
            android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HorizontalScroll"
            android:orientation="horizontal">

               <TextView
                   android:id="@+id/showFacName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginStart="15sp"
                   android:layout_marginTop="100sp"
                   android:textColor="#000000"
                   android:textSize="30sp"
                   android:textStyle="bold" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/showFacName"
                   android:layout_marginStart="15sp"
                   android:textColor="@android:color/black"
                   android:id="@+id/showDesignation"
                   android:layout_marginTop="30sp"
                   android:textSize="30sp"
                   android:textStyle="bold"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/showDesignation"
                   android:layout_marginStart="15sp"
                   android:layout_alignParentStart="true"
                   android:textColor="@android:color/black"
                   android:id="@+id/showQualification"
                   android:layout_marginTop="30sp"
                   android:textSize="30sp"
                   android:textStyle="bold" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/showQualification"
                   android:layout_marginStart="15sp"
                   android:layout_alignParentStart="true"
                   android:textColor="@android:color/black"
                   android:id="@+id/showExperience"
                   android:layout_marginTop="30sp"
                   android:textSize="30sp"
                   android:textStyle="bold"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/showExperience"
                   android:layout_marginStart="15sp"
                   android:layout_alignParentStart="true"
                   android:textColor="@android:color/black"
                   android:id="@+id/showAoi"
                   android:layout_marginTop="30sp"
                   android:textSize="30sp"
                   android:textStyle="bold"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/showAoi"
                   android:layout_marginStart="15sp"
                   android:layout_alignParentStart="true"
                   android:textColor="@android:color/black"
                   android:id="@+id/showEmail"
                   android:layout_marginTop="30sp"
                   android:textSize="30sp"
                   android:textStyle="bold"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/showEmail"
                   android:layout_marginStart="15sp"
                   android:layout_alignParentStart="true"
                   android:textColor="@android:color/black"
                   android:id="@+id/showContact"
                   android:layout_marginTop="30sp"
                   android:textSize="30sp"
                   android:textStyle="bold"/>

            </RelativeLayout>
        </HorizontalScrollView>

        <ImageButton
            android:id="@+id/rightbtn"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="40sp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@android:drawable/ic_media_ff" />

        <ImageButton
            android:id="@+id/leftbtn"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_marginStart="40sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@android:drawable/ic_media_rew" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>